<div class="content-page">

	<!-- Start content -->
	<div class="content">

		<div class="container-fluid">

			<div class="row">
				<div class="col-xl-12">
					<div class="breadcrumb-holder">
						<h1 class="main-title float-left">Applications</h1>
						<ol class="breadcrumb float-right">
							<li class="breadcrumb-item">Home</li>
							<li class="breadcrumb-item active">Applications</li>
						</ol>
						<div class="clearfix"></div>
					</div>
				</div>
			</div>
			<!-- end row -->







			<div class="row">

				<div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
					<div class="card mb-3">
						<div class="card-header">
							<h3><i class="fa fa-file"></i> Applications</h3>
						</div>

						<div class="card-body">

							<table id="example1" class="table table-bordered table-responsive-xl table-hover display">
								<thead>
									<tr>
										<th>ID</th>
										<th>Name</th>
										<th>Contact</th>
										<th>Address</th>
										<th>Email</th>
										<th>Resume</th>
										<th>Job name</th>
										<th>Action</th>
									</tr>
								</thead>
								<tbody>
								@if (ApplicationsList != null && ApplicationsList.Any())
									{
									foreach (var item in ApplicationsList)
										{
											<tr>
												<td>@item.Id</td>
												<td>@item.Name</td>
												<td>@item.Contact</td>
												<td>@item.Address</td>
												<td>@item.Email</td>
												<td>
													<a href="@Url.Content("~/assets/public/uploads/" + System.IO.Path.GetFileName(item.Resume))" target="_blank" class="btn btn-primary">View Resume</a>
												</td>
												<td>@item.job_name</td>
												<td>
													<button class="btn btn-danger" onclick="confirmDelete('@item.Id')">
														<i class="fa fa-trash"></i>
													</button>
												</td>
												
											</tr>
										}
									}
									else
									{
										<tr>
											<td colspan="8" class="text-center">No applications data available.</td>
										</tr>
									} 
								</tbody>
							</table>

						</div>
					</div><!-- end card-->
				</div>

			</div>



		</div>
		<!-- END container-fluid -->

	</div>
	<!-- END content -->

</div>
<!-- END content-page -->
