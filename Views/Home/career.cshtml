										<a class="page-link" href="@Url.Action("Career", new { page = i })">@i</a>
									</li>
								}

								<li class="page-item @(currentPage == totalPages ? "disabled" : "")">
									<a class="page-link" href="@Url.Action("Career", new { page = currentPage + 1 })">&#129185;</a>
								</li>
							</ul>
						</nav>
					}
